<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

    <p>
   <strong>description:</strong>
  <%= @blog.description %>
   </p>
   <p>
  <strong>images:</strong>
  <%@blog.images.each do |image|%>
   <td><%= image_tag image.image, :height=>"250", :width=>"250" %></td>
  </p>
  <% end %>
  <p>
  <strong>vedio:</strong>
  <%= video_tag @blog.vedio, :size => "320x260", :controls => true %>
  
  
 </p>
  <strong>document:</strong>
<% if @blog.document.present? %>
<a href="<%=@blog.document.url %>"><%=  @blog.document.file.original_filename %></a>
  <% end %>
 </p>
  <h2>Comments</h2>
    <div class="comments-container">
    <%= render 'comments/comments' %>
    </div>
       <h2>Add a comment:</h2>
      <%#if  Comment.where(:blog_id => @blog.id, user_id: current_user.id).present?
       %>
     <%= render 'comments/form'%>
     <%#end %>

    <%= link_to 'Back', blogs_path %>

