<div class="container">
<p id="notice"><%= notice %></p>
<% if params[:search].present? %>
<h3> <%= @blogs.count%> Results found.</h3>
<%end %>
<h1>blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>image</th>
      <th>Category</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
         <td><%= blog.description %></td>
       
        <td><%= image_tag blog.image, :height=>"300", :width=>"300" %></td>
        <td>
        <%if blog.category_id.present? %>
            <%=Category.find(blog.category_id).name %>
        <% end %>
          
        </td>
        <td><%= link_to 'Show', blog %></td>
       
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
   
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
</div>